<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane id="root-layout" dividerPositions="0.25" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zef.vehiclerenter.controllers.RootLayoutController">
  <items>
    <BorderPane id="sidebar" style="-fx-background-color: #2E294E;" SplitPane.resizableWithParent="false">
      <top>
        <VBox spacing="12.0" BorderPane.alignment="CENTER">
          <children>
            <Label fx:id="sidebarTitleLabel" text="Vehicle Rent App" textFill="WHITE">
              <font>
                <Font name="System Bold" size="28.0"/>
              </font>
              <VBox.margin>
                <Insets top="48.0"/>
              </VBox.margin>
            </Label>
            <Separator id="sidebar-separator" prefWidth="200.0">
              <padding>
                <Insets bottom="12.0" top="12.0"/>
              </padding>
            </Separator>
            <Hyperlink id="sidebar-go-to-vehicles-view" fx:id="sidebarGoToVehiclesHyperlink" onAction="#handleGoToVehiclesView" text="Daftar Kendaraan" textFill="WHITE">
              <font>
                <Font size="18.0"/>
              </font>
            </Hyperlink>
            <Hyperlink id="sidebar-go-to-rental-view" fx:id="sidebarGoToRentalHyperlink" onAction="#handleGoToRentalView" text="Daftar Penyewaan" textFill="WHITE">
              <font>
                <Font size="18.0"/>
              </font>
            </Hyperlink>
            <Hyperlink id="sidebar-go-to-admins-view" fx:id="sidebarGoToAdminsHyperlink" onAction="#handleGoToAdminsView" text="Kelola Admin" textFill="WHITE">
              <font>
                <Font size="18.0"/>
              </font>
            </Hyperlink>
          </children>
        </VBox>
      </top>

      <bottom>
        <VBox style="-fx-background-color: transparent;" BorderPane.alignment="CENTER_LEFT">
          <children>
            <Hyperlink id="sidebar-login" fx:id="sidebarLoginHyperlink" onAction="#handleLogin" text="Admin Login" textFill="WHITE">
              <font>
                <Font size="18.0"/>
              </font>
            </Hyperlink>
            <Hyperlink id="sidebar-logout" fx:id="sidebarLogoutHyperlink" layoutX="10.0" layoutY="10.0" onAction="#handleLogout" text="Logout" textFill="#d32424">
              <font>
                <Font size="18.0"/>
              </font>
            </Hyperlink>
          </children>
        </VBox>
      </bottom>

      <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
      </padding>
    </BorderPane>
    <AnchorPane id="scene-container" minHeight="0.0" minWidth="0.0" prefHeight="718.0" prefWidth="264.0">
      <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <content>
            <AnchorPane fx:id="sceneContainerInner" minHeight="0.0" minWidth="0.0"/>
          </content>
        </ScrollPane>
      </children>
    </AnchorPane>
  </items>
</SplitPane>
